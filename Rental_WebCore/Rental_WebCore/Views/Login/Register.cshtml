
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Main CSS-->
    <link rel="stylesheet" type="text/css" href="~/CSS_Rental/css/main.css">
    <!-- Font-icon css-->
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Login - Vali Admin</title>
    <style>
        .login-content .login-box {
            min-height: 530px;
        }
    </style>
</head>
<body>
    <section class="material-half-bg">
        <div class="cover"></div>
    </section>
    <section class="login-content">
        <div class="logo">
            <h1>PPC Rental</h1>
        </div>
        <div class="login-box">
            <form class="login-form" action="index.html">
                <h3 class="login-head"><i class="fa fa-lg fa-fw fa-user"></i>REGISTER</h3>
                <div class="form-group">
                    <label class="control-label">USERNAME</label>
                    <input class="form-control" type="text" placeholder="User Name" autofocus>
                </div>
                <div class="form-group">
                    <label class="control-label">PASSWORD</label>
                    <input class="form-control" type="password" placeholder="Password">
                </div>
                <div class="form-group">
                    <label class="control-label">CONFIRM PASSWORD</label>
                    <input class="form-control" type="password" placeholder="Confirm Password">
                </div>
                <div class="form-group">
                    <label class="control-label">EMAIL</label>
                    <input class="form-control" type="password" placeholder="Email">
                </div>

                <br />
                <div class="form-group btn-container">
                    <button class="btn btn-primary btn-block"><i class="fa fa-sign-in fa-lg fa-fw"></i>REGISTER</button>
                </div>
            </form>

        </div>
    </section>
    <!-- Essential javascripts for application to work-->
    <script src="~/CSS_Rental/js/jquery-3.2.1.min.js"></script>
    <script src="~/CSS_Rental/js/popper.min.js"></script>
    <script src="~/CSS_Rental/js/bootstrap.min.js"></script>
    <script src="~/CSS_Rental/js/main.js"></script>
    <!-- The javascript plugin to display page loading on top-->
    <script src="~/CSS_Rental/js/plugins/pace.min.js"></script>
    <script type="text/javascript">
        // Login Page Flipbox control
        $('.login-content [data-toggle="flip"]').click(function () {
            $('.login-box').toggleClass('flipped');
            return false;
        });
    </script>
</body>
</html>