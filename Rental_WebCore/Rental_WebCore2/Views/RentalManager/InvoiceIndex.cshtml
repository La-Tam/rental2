        
@{
    ViewData["Title"] = "InvoiceIndex";
}
<head>
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/CSS_Rental/css/rental.css" rel="stylesheet" />
</head>

<body>

    <main class="app-content">
        <div class="page-item" style="height: 100%;">
           
            @* Tieu de *@
            <div>
                <div class="alert alert-warning" style="background-color:#009688;">
                    <h4 style="margin-bottom:0px; text-align:center;color:aliceblue">QUẢN LÝ PHÍ THU</h4>
                </div>
            </div>
            @* Chia 2 cot *@
            <div class="row">
                @* Cot loc *@
                <div class="col-md-2">
                    @* Chon du an *@
                    <div class="form-group">
                        <select class="form-control" id="exampleSelect1">
                            <option>TNN</option>
                            <option>An Lạc</option>
                            <option>Bình Minh</option>
                            <option>Thiên Đường</option>
                            <option>BBC</option>
                        </select>
                    </div>

                    @* Loc theo trang thai *@
                    <div class="tile">
                        <div class="widget-header">

                            <h5 style="text-align:center"> Trạng thái</h5>
                        </div>
                        <hr style="width:153px;margin-left:-20px" />
                        <div class="widget-body">
                            <div class="widget-main">
                                <p>
                                    <label>
                                        <input name="Status" type="radio" checked="checked">
                                        <span class="lbl"> tất cả (50)</span>
                                    </label>

                                    <label>
                                        <input name="Status" type="radio">
                                        <span class="lbl"> chưa chốt (37)</span>
                                    </label>

                                    <label>
                                        <input name="Status" type="radio">
                                        <span class="lbl"> chưa chưa đóng tiền (13)</span>
                                    </label>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                @* Cot du lieu *@
                <div class="col-md-10">
                    <div class="tile" style="height:593px">
                        <div style=" height:555px; border:1px solid black; padding:20px; overflow:auto;border-color:darkgray">
                            @* Thong báo *@
                            <div class="tile" style="height:30px;border:solid 1px red">
                                <p style="margin-top:-12px;color:red"><i>Những sản phẩm còn 1->5 ngày đến ngày đóng tiền và sản phẩm chưa đóng tiền</i></p>
                            </div>
                            <hr style="margin-top:-10px" />
                            @* Hien thi cac sp  *@
                            <div class="top-10 clearfix">
                                <style>
                                    .btn-outline-primary {
                                        background-color: white;
                                        color: black;
                                        font-size: 16px;
                                        border: solid 1px;
                                        border-color: darkgray;
                                        width: 171px;
                                        height: 240px;
                                    }

                                    .dropbtn:hover, .dropbtn:focus {
                                        background-color: #009688;
                                    }

                                    .dropdown-menu {
                                        display: none;
                                        background-color: white;
                                        max-width: 10px;
                                        margin-top: -150px;
                                        margin-left: 5px;
                                        border: solid 1px;
                                        border-color: darkgray;
                                    }

                                    .dropdown a:hover {
                                        background-color: #009688;
                                        color: white;
                                    }
                                </style>
                                <div class="row">
                                    <div class="col-sm-3 top-5">
                                        <div class="dropdown" id="HD">
                                            <button class="btn btn-outline-primary " type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <p>
                                                    <img src="~/wwwroot/images/Rental/Contract/icons8-profile-48.png" /><br />
                                                    <b>Vina-phone</b> <br>
                                                    <b>Tầng 2</b> <br>
                                                    <b>P.103</b> <br>
                                                    <b>A.kien</b><br>
                                                    <b style="font-style: italic;">8.000.000</b><br />
                                                    <b>(Đã ghi)</b><br />

                                                </p>
                                            </button>

                                            @if (true)
                                            {
                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">

                                                    <a class="dropdown-item " asp-area="" href="@Url.Action("CreatInvoice","RentalManager")"><i>Tạo hóa đơn</i></a>
                                                    <a class="dropdown-item " asp-area="" href="@Url.Action("CreatInvoice","RentalManager")"><i>Xem</i></a>

                                                </div>
                                            }
                                            else
                                            {
                                                <a class="dropdown-item " asp-area="" asp-controller="RentalManager" asp-action="CreatInvoice"><i>Ghi hóa đơn</i></a>
                                            }
                                        </div>
                                    </div>
                                    @*  *@
                                    @*  *@
                                    <div class="col-sm-3 top-5">
                                        <div class="dropdown">
                                            <button class="btn btn-outline-primary " type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <p>
                                                    <img src="~/wwwroot/images/Rental/Contract/icons8-profile-48.png" /><br />
                                                    <b>Vina-phone</b> <br>
                                                    <b>Tầng 2</b> <br>
                                                    <b>P.123</b> <br>
                                                    <b>Nguyễn Hữu Bình</b><br>
                                                    <b style="font-style: italic;">10.000.000</b><br />
                                                    <b>(Chưa ghi)</b>
                                                </p>
                                            </button>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                <a class="dropdown-item" asp-area="" href="@Url.Action("CreatInvoice","RentalManager")"><i>Tạo hóa đơn</i></a>
                                                <a class="dropdown-item" asp-area="" href="@Url.Action("CreatInvoice","RentalManager")"><i>Xem</i></a>

                                            </div>
                                        </div>
                                    </div>
                                    @*  *@
                                    <div class="col-sm-3 top-5">
                                        <div class="dropdown">
                                            <button class="btn btn-outline-primary " type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <p>
                                                    <img src="~/wwwroot/images/Rental/Contract/icons8-profile-48.png" /><br />
                                                    <b>Vina-phone</b> <br>
                                                    <b>Tầng 2</b> <br>
                                                    <b>P.123</b> <br>
                                                    <b>Trân Hữu Cảnh</b><br>
                                                    <b style="font-style: italic;">8.000.000</b><br />
                                                    <b>(Chưa ghi)</b>
                                                </p>
                                            </button>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                <a class="dropdown-item" asp-area="" href="@Url.Action("CreatInvoice","RentalManager")"><i>Tạo hóa đơn</i></a>
                                                <a class="dropdown-item" asp-area="" href="@Url.Action("CreatInvoice","RentalManager")"><i>Xem</i></a>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <p></p>
                            <br />
                            <hr style="margin-top:900px" />
                            @* tạo qua trang *@
                            <ul class="pagination" style="margin-left:500px">
                                <li class="page-item disabled"><a class="page-link" href="#">«</a></li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">4</a></li>
                                <li class="page-item"><a class="page-link" href="#">5</a></li>
                                <li class="page-item"><a class="page-link" href="#">»</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <div class="col-md-1"></div>
</body>