@{
    ViewData["Title"] = "InvoiceIndex";
}
@{
    string[] name = new string[12];
    int i = 0;
}
<head>
    <link href="~/wwwroot/CSS_Rental/css/main.css" rel="stylesheet" />
    <style type="text/css">
        a:hover, a:focus {
            text-decoration: none;
        }
    </style>

</head>

<body>

    <main class="app-content">
        <div class="page-item" style="height: 100%;">
            @* Tieu de *@
            <div>
                <div class="alert alert-warning" style="background-color:#009688;">
                    <h4 style="margin-bottom:0px; text-align:center;color:aliceblue">@Rental_WebCore2.Resources.Rental_Manager.Rental.Invoice_Management</h4>
                </div>
            </div>
            @* Chia 2 cot *@
            <div class="row">
                @* Cot loc *@
                <div class="col-md-2">
                    @* Chon du an *@
                    <div class="form-group">
                        <select class="form-control" id="exampleSelect1">
                            <option>TNN</option>
                            <option>An Lạc</option>
                            <option>Bình Minh</option>
                            <option>Thiên Đường</option>
                            <option>BBC</option>
                        </select>
                    </div>

                    @* Loc theo trang thai *@
                    <div class="tile">
                        <div class="widget-header">

                            <h5 style="text-align:center"> @Rental_WebCore2.Resources.Rental_Manager.Rental.Status</h5>
                        </div>
                        <hr style="width:153px;margin-left:-20px" />
                        <div class="widget-body">
                            <div class="widget-main">
                                <p>
                                    <label>
                                        <input name="Status" type="radio" checked="checked">
                                        <span class="lbl"> @Rental_WebCore2.Resources.Rental_Manager.Rental.All (50)</span>
                                    </label>

                                    <label>
                                        <input name="Status" type="radio">
                                        <span class="lbl"> @Rental_WebCore2.Resources.Rental_Manager.Rental.Latched (37)</span>
                                    </label>

                                    <label>
                                        <input name="Status" type="radio">
                                        <span class="lbl"> @Rental_WebCore2.Resources.Rental_Manager.Rental.Not_Yet_Latch (13)</span>
                                    </label>
                                </p>
                            </div>
                        </div>
                    </div>
                    <!--Loc theo nha-->
                    <div class="tile">
                        <div class="widget-header">
                            <h5 style="text-align:center"> @Rental_WebCore2.Resources.RentalTexts.Loctheonha</h5>
                        </div>
                        <hr style="width:153px;margin-left:-20px" />
                        <div class="widget-body">
                            <div class="widget-main">
                                <p>
                                    <label>
                                        <input name="Status" type="radio" checked="checked">
                                        <span class="lbl"> abc (50)</span>
                                    </label>

                                    
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                @* Cot du lieu *@
                <div class="col-md-10">
                    <div class="tile" style="height:670px">
                        <div class="row">
                            <input class="app-search__input" type="search" placeholder=@Rental_WebCore2.Resources.Rental_Manager.Rental.Search style="margin-left:17px;border:solid 1px;border-color:#009688" />
                            <a class="btn btn-primary" style="background-color: #007065;color:white;margin-left:10px">@Rental_WebCore2.Resources.Rental_Manager.Rental.Search</a>

                        </div>
                        <br />
                        <div style=" height:555px; border:1px solid black; padding:20px; overflow:auto;border-color:darkgray">
                            @* Thong báo *@
                            <div class="tile" style="height:30px;margin-top:-10px;border:solid 1px red">
                                <p style="margin-top:-12px;color:red"><i>@Rental_WebCore2.Resources.Rental_Manager.Rental.Attention_2</i></p>
                            </div>
                            <hr style="margin-top:-20px" />
                            @* Hien thi cac sp  *@


                            <div class="col-lg-12">
                                <div class="row">
                                    @for (var k = 0; k < 4; k++)
                                    {
                                        <div class="row">
                                            @for (var j = 0; j < 3 ; j++)
                                            {
                                                <div class="col-lg-4">
                                                    @{name[i] = "Bất động sản " + (i + 1);
                                                        <a id="dropdownMenuButton" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="border-color:#009688">
                                                            <div class="tile btn-outline-primary " style="border:1px solid;border-color:#009688;" aria-haspopup="true" aria-expanded="false">
                                                                <img src="~/wwwroot/images/Rental/Contract/icons8-profile-48.png" style="margin-top:-15px;margin-left:0px" />
                                                                <samp style="font-size:18px">P.123</samp>
                                                                <hr style="background-color:#009688;margin-top:1px" />
                                                                <samp style="font-size:16px">@Rental_WebCore2.Resources.Rental_Manager.Rental.Property :</samp> <samp> Vina-phone</samp> <br>
                                                                <samp style="font-size:16px">@Rental_WebCore2.Resources.Rental_Manager.Rental.Customer_ID :</samp><samp style="">(Mã khách hàng)</samp><br>
                                                                <samp style="font-size:16px">@Rental_WebCore2.Resources.Rental_Manager.Rental.Renter :</samp><samp style="">(Tên người thuê)</samp><br>
                                                                <samp style="font-size:16px">@Rental_WebCore2.Resources.RentalTexts.Form_date :</samp><samp style="">(dd/mm/yyyy)</samp><br />
                                                                <samp style="font-size:16px">@Rental_WebCore2.Resources.Rental_Manager.Rental.To_Date :</samp><samp style="">(dd/mm/yyyy)</samp><br />
                                                                <samp style="font-size:16px">@Rental_WebCore2.Resources.RentalTexts.Trang_Thai :</samp><samp style="">Trống</samp>
                                                            </div>
                                                        </a>
                                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="margin-top:-186px; margin-left: 20px;">
                                                            <a class="dropdown-item" asp-area="" href="@Url.Action("CreateInvoice","RentalManager")"><i>tạo hóa đơn</i></a>
                                                            <a class="dropdown-item" asp-area="" href="@Url.Action("DetailInvoice","RentalManager")"><i>hiển thị hóa đơn</i></a>
                                                            <a class="dropdown-item" asp-area="" href="@Url.Action("Depositinvoice","RentalManager")"><i>hóa đơn tiền cọc</i></a>
                                                            <a class="dropdown-item" asp-area="" href="@Url.Action("Nodepositinvoice","RentalManager")"><i>hóa đơn tiền cọc (chưa thu)</i></a>

                                                        </div>
                                                        i = i + 1;
                                                    }
                                                </div>
                                            }
                                        </div>
                                        <br />
                                    }
                                </div>

                                <p></p>
                                <br />
                                <hr style="margin-top:50px" />
                                @* tạo qua trang *@
                                <ul class="pagination" style="margin-left:500px">
                                    <li class="page-item disabled"><a class="page-link" href="#">«</a></li>
                                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                                    <li class="page-item"><a class="page-link" href="#">5</a></li>
                                    <li class="page-item"><a class="page-link" href="#">»</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </main>

    <div class="col-md-1"></div>
</body>