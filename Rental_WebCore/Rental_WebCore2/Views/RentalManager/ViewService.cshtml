@{
    ViewData["Title"] = "ViewService";
}

<head>
    <link href="~/wwwroot/CSS_Rental/css/main.css" rel="stylesheet" />

</head>

<body>
    <main class="app-content">
        @* Tiêu đề *@
        <div class="alert alert-warning" style="background-color:#009688;">
            <div class="row">
                <div class="col-lg-11">
                    <h4 style="margin-bottom:0px; text-align:left;color:aliceblue">@Rental_WebCore2.Resources.Rental_Manager.Rental.Table_Service >> H3</h4>
                </div>
                <div class="col-lg-1" align="right">
                    <a class="btn-outline-primary" href="@Url.Action("ServicePriceSettingIndex","RentalManager")">
                        <span aria-hidden="true">
                            <img src="~/wwwroot/images/Rental/Contract/icons8-delete-60.png" style="width:25px" />
                        </span>
                    </a>
                </div>
            </div>
        </div>
        @*  *@
        <div class="tile">
            <div>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>@Rental_WebCore2.Resources.Rental_Manager.Rental.Type_Of_Service</th>
                            <th>@Rental_WebCore2.Resources.Rental_Manager.Rental.Unit</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Internet </td>
                            <td>
                                <select class="form-control-sm" disabled="">
                                    <option>Đồng/Tháng </option>
                                    <option>-Rỗng- </option>
                                    <option>Đồng/Năm </option>
                                    <option>Đồng/Chiếc/tháng </option>
                                    <option>Đồng lần </option>
                                </select>
                            </td>
                            <td style="text-align:center;color:red"><u>@Rental_WebCore2.Resources.Rental_Manager.Rental.Delete</u></td>
                        </tr>
                        <tr>
                            <td>Cáp</td>
                            <td>
                                <select class="form-control-sm" disabled="">
                                    <option>Đồng/Tháng </option>
                                    <option>-Rỗng- </option>
                                    <option>Đồng/Năm </option>
                                    <option>Đồng/Chiếc/tháng </option>
                                    <option>Đồng lần </option>
                                </select>
                            </td>
                            <td style="text-align:center;color:red"><u>@Rental_WebCore2.Resources.Rental_Manager.Rental.Delete</u></td>
                        </tr>
                        <tr>
                            <td>Đổ rác</td>
                            <td>
                                <select class="form-control-sm" disabled="">
                                    <option>Đồng/Tháng </option>
                                    <option>-Rỗng- </option>
                                    <option>Đồng/Năm </option>
                                    <option>Đồng/Chiếc/tháng </option>
                                    <option>Đồng lần </option>
                                </select>
                            </td>
                            <td style="text-align:center;color:red"><u>@Rental_WebCore2.Resources.Rental_Manager.Rental.Delete</u></td>
                        </tr>
                        <tr>
                            <td>Giữ xe</td>
                            <td>
                                <select class="form-control-sm" disabled="">
                                    <option>Đồng/Chiếc/Tháng </option>
                                    <option>-Rỗng- </option>
                                    <option>Đồng/Năm </option>
                                    <option>Đồng/Tháng </option>
                                    <option>Đồng lần </option>
                                </select>
                            </td>
                            <td style="text-align:center;color:red"><u>@Rental_WebCore2.Resources.Rental_Manager.Rental.Delete</u></td>
                        </tr>
                    </tbody>
                </table>
                <div>
                    <a class="btn btn-primary" style="background-color: #007065;color:white;margin-left:0px">@Rental_WebCore2.Resources.Rental_Manager.Rental.Save</a>
                    <a class="btn btn-primary" style="background-color: #007065;color:white;margin-left:15px" onclick="AddService(0)">@Rental_WebCore2.Resources.Rental_Manager.Rental.Add_Service</a>
                    <a class="btn btn-primary" style="background-color: #007065;color:white;margin-left:15px" href="@Url.Action("ServicePriceSettingIndex","RentalManager")">@Rental_WebCore2.Resources.Rental_Manager.Rental.Exit</a>
                </div>
            </div>

        </div>
    </main>
</body>

<div class="modal fade" id="myModalService">
    <div class="modal-dialog">
        <div class="modal-content">
            <text class="form-control" style="background-color:#007065; height:50px;color:aliceblue;border:hidden; text-align:center;font-size:25px; padding-left:0px;border-radius:unset" id="modalTitleService;">
                @Rental_WebCore2.Resources.Rental_Manager.Rental.Add_Service
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color:white; font-size:30px">
                    <span aria-hidden="true">&times;</span>
                </button>
            </text>
            <div class="modal-header">
            </div>
            <div class="modal-body">
                <form id="form">

                    <div class="form-group">
                        <label for="exampleInputEmail1">@Rental_WebCore2.Resources.Rental_Manager.Rental.Type_Of_Service</label>
                        <input class="form-control" id="exampleInputEmail1" type="text" aria-describedby="emailHelp" placeholder="Nhập loại dịch vụ">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">@Rental_WebCore2.Resources.Rental_Manager.Rental.Unit</label>
                        <br />
                        <select class="form-control-sm">
                            <option>-Rỗng- </option>
                            <option>Đồng/Chiếc/Tháng </option>
                            <option>Đồng/Năm </option>
                            <option>Đồng/Tháng </option>
                            <option>Đồng lần </option>
                        </select>
                    </div>


                </form>
                @*  *@
                <div class="modal-footer">
                    <a class="btn btn-primary" style="background-color: #007065;color:white">@Rental_WebCore2.Resources.Rental_Manager.Rental.Save</a>
                    <button class="btn btn-primary" style="background-color: #007065;color:white" data-dismiss="modal">@Rental_WebCore2.Resources.Rental_Manager.Rental.Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function AddService(addservice) {
        $("#form")[0].reset();
        $("#modalTitleService").html("Thêm dịch vụ");
        $("#myModalService").modal();
    }
</script>

