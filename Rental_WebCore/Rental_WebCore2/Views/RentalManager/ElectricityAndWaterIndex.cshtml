@* Ghi điện nước *@
<div class="modal fade" id="myModalElectricityWater">
    <div class="modal-dialog">
        <div class="modal-content"style="width:550px;height:600px;">
            <text class="form-control" style="background-color:#007065; height:50px;color:aliceblue;border:hidden; text-align:center;font-size:25px; padding-left:0px;border-radius:unset" id="modalTitleElectricityWater;">
                Ghi điện nước
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color:white; font-size:30px">
                    <span aria-hidden="true">&times;</span>
                </button>
            </text>

            <div class="modal-body">
                <form id="form">
                    <div >
                        <text style="text-align:center" ><h4 style="color:#007065">Tên dự án >> Tên tòa nhà >> Số tầng >> Số phòng</h4></text>
                    </div>
                    <br />
                    <br />
                    <div>
                        <div class="form-group row">
                            <label class="control-label col-md-3" style="text-align:right">Ngày tháng chốt</label>
                            <div class="col-md-8">
                                <input class="text-body col-md-4 " type="text" value="21/2/2019" disabled="disabled">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3" style="text-align:right">Giờ chốt</label>
                            <div class="col-md-8">
                                <input class="text-body col-md-4 " type="text" value="7:30 PM" disabled="disabled">
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    
                                    <th style="background-color:darkgray">Chỉ số</th>
                                    <th style="background-color:darkgray">Chỉ số đầu</th>
                                    <th style="background-color:darkgray">Chỉ số cuối</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                
                                <tr>
                                    <td>Số điện</td>
                                    <td><input class="text-center " type="text" style="width:80px" value="760" disabled="" /></td>
                                    <td><input class="text-dark " style="width:80px" type="text" value="" /></td>
                                    
                                </tr>
                                <tr>
                                    <td>Số nước</td>
                                    <td><input class="text-center " style="width:80px" type="text" value="1020" disabled="" /></td>
                                    <td><input class="text-dark " style="width:80px" type="text" value="" /></td>
                                    
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div>
                        <div class="form-group row">
                            <label class="control-label col-md-3"style="text-align:right">Ghi chú</label>
                            <div class="col-md-9">
                                <textarea class="text-body" rows="4" placeholder="Note"style="width:380px"></textarea>
                            </div>
                        </div>
                    </div>
                    
                    


                </form>
                <div class="modal-footer">
                    <a class="btn btn-primary" style="background-color: #007065;color:white">Lưu</a>
                    <button class="btn btn-primary" style="background-color: #007065;color:white" data-dismiss="modal">Hủy</button>
                </div>
            </div>
        </div>
    </div>
</div>

@*  *@
<script>
    function WEAW(WEW) {
        $("#form")[0].reset();
        $("#modalTitleElectricityWater").html("Ghi điện nước");
        $("#myModalElectricityWater").modal();
    }
</script>