<style>
    .Group-PhieuThu {
        /*display: grid;
        grid-template-columns: auto auto auto;
        grid-row-gap: 15px;*/
        border: 1px solid black;
        padding: 20px;
        height: 100%;
    }


    .PhieuThu {
        margin: auto;
        border-radius: 25px;
        border: 2px solid #73AD21;
        padding: 15px;
        width: 200px;
        float: left;
    }

    .btn {
        background-color: #009688;
        color: white;
    }

    .pagination {
        margin-left: 35%;
        margin-top: 1%;
    }

    #btnThemPhieuThu {
        background-color: #009688;
    }

    #btnXoahetthongtinPhieuThu {
        background-color: #009688;
    }

    #inpTimKiem {
        margin-left: auto;
        margin-top: -25px;
    }

    #btnTimKiem {
        background-color: #009688;
    }

    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
